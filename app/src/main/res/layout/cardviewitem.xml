<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        card_view:cardElevation="6dp"
        android:padding="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/card_iv"
                android:padding="4dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_tv"
                android:padding="4dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/card_iv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date_tv"
                android:padding="4dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/card_tv"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/copyright_tv"
                android:padding="4dp"
                android:layout_below="@id/date_tv"
                android:layout_centerHorizontal="true"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/card_bt"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/copyright_tv"
                android:text="@string/description_button"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description_tv"
                android:layout_below="@id/card_bt"
                android:padding="6dp"
                android:gravity="center"
                />







        </RelativeLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>